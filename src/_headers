# Headers para controlar el caché en Cloudflare Pages

# Headers SUPER AGRESIVOS para todas las páginas de resultados - SIN CACHE
/results/*
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  X-Robots-Tag: noindex
  Clear-Site-Data: "cache"

# Headers específicos para eventos en vivo (sin caché)
/results/*/live.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

# Headers para la página principal de resultados de eventos
/results/*/index.html
  Cache-Control: no-cache, no-store, must-revalidate, max-age=0, s-maxage=0
  Pragma: no-cache
  Expires: 0
  Clear-Site-Data: "cache"

